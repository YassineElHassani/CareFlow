# ============================================
# CareFlow EHR - Environment Configuration
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGO_URI=mongodb://mongo:27017/careflow
MONGO_URI_TEST=mongodb://localhost:27017/careflow_test

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
JWT_RESET_EXPIRES=1h

# Email Configuration (MailDev for development)
EMAIL_HOST=maildev
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@careflow.com
EMAIL_QUEUE_NAME=email-notifications

# Application URLs
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Appointment Reminders
REMINDER_HOURS_BEFORE=24
REMINDER_CHECK_INTERVAL_MS=3600000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME_MINUTES=15